generator client {
  provider   = "prisma-client"
  // Generate a JS-only client into src/generated/client
  output     = "../src/generated/client"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model Report {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  vinNumber String
  createdAt DateTime @default(now())
}

model Payment {
  id        Int           @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  plan      String?
  orderID   String?       @unique
  status    ReportStatus?
  createdAt DateTime      @default(now())
}

enum ReportStatus {
  STARTED
  PENDING
  COMPLETED
}

model Contact {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  vnnumber  String
  message   String?
  createdAt DateTime @default(now())
}

